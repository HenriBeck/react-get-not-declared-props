{
  "compilerOptions": {
    "lib": ["es2015"],
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "strict": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declarationDir": "./dist",
    "keyofStringsOnly": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}